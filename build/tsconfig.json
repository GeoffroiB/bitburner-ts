{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": ".",

    "target": "ES2021",
    "module": "CommonJS",

    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": false,

    "lib": ["es2016", "dom", "es2017.object", "es2019"],
    "moduleResolution": "node",

    "sourceMap": false,
    "strict": true

  },

  "include": ["./*.ts"],
  "exclude": ["./*.js", "./setup.ts"]
}
