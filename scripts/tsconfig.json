{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",

    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": false,

    "lib": ["es2016", "dom", "es2017.object", "es2019"],
    "module": "ES2020",
    "moduleResolution": "node",

    "sourceMap": false,
    "strict": true,
    "target": "ES2021",
    "typeRoots": ["./src/@types"],
    "types": ["node", "bitburner"]
  },

  "include": ["./**/*.ts"],
  "exclude": [""]
}
