{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "../dist",

    "esModuleInterop": true,
    "isolatedModules": false,
    "noImplicitAny": false,

    "lib": ["es2016", "dom", "es2017.object", "es2019"],
    "module": "ES2020",
    "moduleResolution": "node",

    "sourceMap": false,
    "strict": true,
    "target": "ES2021",
    "typeRoots": ["./@types"],
    "types": ["node", "bitburner"]
  },

  "include": ["**/*.ts"],
  "exclude": [""]
}
