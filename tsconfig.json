{
  "compilerOptions": {
    "baseUrl": "./src/",

    "esModuleInterop": true,
    "isolatedModules": false,

    "jsx": "react",
    "lib": ["es2016", "dom", "es2017.object", "es2019"],
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist/",

    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "types": ["node", "bitburner"],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },

  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
